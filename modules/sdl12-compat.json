{
  "name": "sdl12-compat",
  "buildsystem": "simple",
  "build-commands": [
    "sed -i 's|/usr/local/include/SDL2|/usr/include/SDL2|g' CMakeLists.txt",
    "sed -i 's|/usr/X11/include|/usr/include/X11|g' CMakeLists.txt",
    "cmake .",
    "make SDL",
    "install -Dm644 libSDL* /app/lib/"
  ],
  "sources": [
    {
      "type": "archive",
      "url": "https://github.com/libsdl-org/sdl12-compat/archive/refs/tags/release-1.2.56.tar.gz",
      "sha256": "f62f3e15f95aade366ee6c03f291e8825c4689390a6be681535259a877259c58"
    }
  ]
}
