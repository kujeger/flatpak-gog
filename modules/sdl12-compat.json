{
  "name": "sdl12-compat",
  "buildsystem": "simple",
  "build-commands": [
    "sed -i 's|/usr/local/include/SDL2|/usr/include/SDL2|g' CMakeLists.txt",
    "sed -i 's|/usr/X11/include|/usr/include/X11|g' CMakeLists.txt",
    "cmake .",
    "make SDL",
    "install -Dm644 libSDL* /app/lib/"
  ],
  "sources": [
    {
      "type": "archive",
      "url": "https://github.com/libsdl-org/sdl12-compat/archive/refs/tags/release-1.2.68.tar.gz",
      "sha256": "63c6e4dcc1154299e6f363c872900be7f3dcb3e42b9f8f57e05442ec3d89d02d"
    }
  ]
}
